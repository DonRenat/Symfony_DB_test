{% extends 'base.html.twig' %} 
{% block stylesheets %} 
   <style> 
      .table { border-collapse: collapse; width:100%; }
      .table th, td {
         width:auto;
         text-align: left; 
         align: left;
         border-collapse: collapse;
      }
      th, td {
         padding: 10px;
         text-align: left;
      }
      table#t01 tr:nth-child(even) {
         background-color: #eee;
         color: #8959A8;
      }
      table#t01 tr:nth-child(odd) {
         background-color: #fff;
         color: #7cc6ff;
      }
      table#t01 th {
         background-color: #7f00ff;
         color: #ffffff;
      }
   </style> 
{% endblock %}  
{% block body %}
   <p style="color: #7f00ff; font-size: 28pt">Магазин электроники<button onclick="location.href='/shop/new'" style="position: absolute; right: 10px; width: 200px; background: #7f00ff; border: 1px solid black; padding: 10px; color: white;">Добавить</button></p>
   <table class = "table" id = t01>
      <tr>  
         <th style="width: 20px;">Id</th>
         <th>Название</th>
         <th>Описание</th>
         <th>Цена</th>
         <th></th>
         <th></th>
      </tr>  
      {% for x in data %} 
      <tr>  
         <td><a href="{{ path('product_show', { 'id' : x.Id }) }}">{{ x.id }}</td>
         <td>{{ x.Name }}</td>
         <td>{{ x.Description }}</td>
         <td>{{ x.Price }}</td>
         <td><a href = "{{ path('shop_update', { 'id' : x.Id }) }}">Изменить</a></td>
         <td><a href = "{{ path('shop_delete', { 'id' : x.Id }) }}">Удалить</a></td>
      </tr>  
      {% endfor %} 
   </table> 
{% endblock %}  
